{
  "name": "plataforma-de-colaboracion-en-tiempo-real",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rm -rf **/dist **/.turbo",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:api": "turbo run build --filter=api-gateway",
    "build:web": "turbo run build --filter=web",
    "build:domain": "turbo run build --filter=@repo/domain",
    "build:infra": "turbo run build --filter=@repo/infraestructure",
    "build:security": "turbo run build --filter=@repo/security",
    "build:realtime": "turbo run build --filter=@repo/realtime",
    "build:shared": "turbo run build --filter=@repo/shared"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  }
}